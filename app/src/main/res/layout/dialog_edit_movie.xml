<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="note_dialog_fragment"
            type="com.example.mad03_fragments_and_navigation.NoticeDialogFragment" />

        <variable
            name="favorites_fragment"
            type="com.example.mad03_fragments_and_navigation.FavoritesFragment" />

        <variable
            name="movie_favorites_view_model"
            type="com.example.mad03_fragments_and_navigation.viewmodels.MovieFavoritesViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        tools:context=".ui.category.manage.ManageCategoryFragment">

        <TextView
            android:id="@+id/textView_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/add_a_note"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText_add_a_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:hint="@string/add_note_here"
            android:inputType="textEmailAddress"
            android:text="@{}" />

    </LinearLayout>
</layout>